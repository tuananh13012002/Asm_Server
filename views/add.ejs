        <form action="/add" method="post" enctype="application/x-www-form-urlencoded">
            <input name="noiDung" required placeholder="Nhập nội dung">
            <input type="date" name="ngayThang" required placeholder="Nhập ngày tháng">
            <input name="linkAnh" required placeholder="Nhập link ảnh">
            <div class="btn">
                <button type="submit" name="save">Save</button>
            </div>
        </form>
    </div>
    <div class="container-full" style="background-color: white;height: 250px;margin-top: 30px;">
        <div style="display: flex;flex-direction: row;padding-top: 150px;padding-left: 200px">
            <div>POWER BY</div>
            <a style=" text-decoration: none;" href="https://asmserveranhlvtph18100.herokuapp.com/">
                <div class="footer" >HÌNH NỀN ĐIỆN THOẠI ĐẸP</div>
            </a>
        </div>
    </div>
</div>



