            padding-top: 10px;
        }
        .content form{
            width: 50%;
            display: flex;
            flex-direction: column;
            text-align: center;
        }
        .content form input{
            margin: 5px;
            padding: 5px;
            border-radius: 5px;

        }
        .btn button{
            width: 30%;
            border:  1px solid black;
            border-radius: 10px;
            background-color: transparent;
            box-shadow: 0px 1px 5px 0px #888888;
        }
        .btn button:hover{
            width: 30%;
            border:  1px solid black;
            border-radius: 10px;
            background-color: black;
            color: white;
            box-shadow: 0px 1px 5px 0px #888888;
        }
        .footer{
            cursor: pointer;
            margin-left: 10px;
            color: #00B7FF;

        }
        .footer:hover{
            cursor: pointer;
            margin-left: 10px;
            color: #00B7FF;
            text-decoration: underline;
        }
